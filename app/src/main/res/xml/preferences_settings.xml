<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <ListPreference
        app:entries="@array/language_array"
        app:entryValues="@array/language_array_entry"
        app:key="appLanguage"
        app:title="@string/language_array_title"
        app:useSimpleSummaryProvider="true" />

    <ListPreference
        app:entries="@array/theme_array"
        app:entryValues="@array/theme_array_entry"
        app:key="appTheme"
        app:title="@string/theme_array_title"
        app:useSimpleSummaryProvider="true" />

</PreferenceScreen>
